                    "db.response.status_code": {
                      "$$exists": false
                    },
                    "exception.message": {
                      "$$exists": false
                    },
                    "exception.type": {
                      "$$exists": false
                    },
                    "exception.stacktrace": {
                      "$$exists": false
                    },
                    "server.address": {
                      "$$type": "string"
                    },
                    "server.port": {
                      "$$type": [
                        "int",
                        "long"
                      ]
                    },
                    "db.query.summary": "aggregate operation-aggregate.test",
                    "db.query.text": {
                      "$$matchAsDocument": {
                        "$$matchAsRoot": {
                          "aggregate": "test",
